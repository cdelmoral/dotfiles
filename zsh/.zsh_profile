######################################################
# Path
######################################################

function addToPATH {
  case ":$PATH:" in
    *":$1:"*) :;; # already there
    *) PATH="$1:$PATH";; # or PATH="$PATH:$1"
  esac
}

addToPATH /usr/local/sbin

######################################################
# System aliases and exports
######################################################

alias ll="ls -al"
alias psx="ps -ef"
alias catp="cat ${HOME}/.zsh_profile"
export GPG_TTY=$(tty)
export TERM="xterm-256color"

######################################################
# Git
######################################################

alias git_config_remote="git config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*'"

######################################################
# Homebrew
######################################################

export BREW_HOME="/usr/local/Cellar"

alias cdbrew="cd ${BREW_HOME}; ll"

######################################################
# nvm
######################################################

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

######################################################
# Go
######################################################

export GOPATH="$HOME/go/bin"
addToPATH $GOPATH

######################################################
# Rust
######################################################

export RUSTPATH="$HOME/.cargo/bin"
addToPATH $RUSTPATH

######################################################
# rbenv
######################################################

# if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

######################################################
# ZSH Theme
######################################################

BULLETTRAIN_STATUS_EXIT_SHOW=true
BULLETTRAIN_TIME_BG=yellow
BULLETTRAIN_TIME_FG=black

BULLETTRAIN_PROMPT_ORDER=(
  time
  dir
  status
  git
)

######################################################
# Terminal Utilities
######################################################

alias nf="osascript -e 'display notification \"Terminal command is done\" with title \"Done\"'"

######################################################
# Python
######################################################

export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || addToPATH $PYENV_ROOT/bin
eval "$(pyenv init -)"

