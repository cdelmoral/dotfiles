{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "agent": {
    "plan": {
      "permission": {
        "bash": {
          "find *": "allow",
          "head *": "allow",
          "ls *": "allow",
          "tail *": "allow",
          "rg *": "allow"
        }
      }
    }
  },
  "mcp": {
    "atlassian-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    }
  },
  "tools": {
    "atlassian-mcp*": false
  }
}
